<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['not_started', 'in_progress', 'completed'], @task.status) %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
