<h2><%= @task.persisted? ? 'EDIT' : 'ADD QUEST' %></h2>

<%= simple_form_for @task, html: { local: true, class: 'form' } do |form| %>
  <div class="form-group">
    <%= form.input :title, label: "Set a Title", required: true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.input :description, label: "Add a Description", required: true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.association :sub_category, label: "Select Category", prompt: 'Choose a category', required: true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.input :time, as: :string, input_html: { class: 'form-control time-input', placeholder: 'HH:MM', required: true } %>
  </div>

  <div class="form-group">
    <%= form.input :urgence, collection: ['low', 'medium', 'high'], as: :radio_buttons, label: "Choose Priority", item_wrapper_class: 'form-check', label_class: 'form-check-label' %>
  </div>

  <h2>Checkpoints</h2>

  <div class="form-group">
    <%= form.button :submit, 'Confirm', class: 'btn btn-primary' %>
    <%= link_to 'Return to List', tasks_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
