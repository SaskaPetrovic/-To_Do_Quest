<h2>Achievements</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>My Trophies <img src="https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExcDZsOG00MDdncXQ4YTAzMTB3bjkyZTNvN244d3U0aTR0MmZhZG8zciZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/LT7GbsL94fNy7QKM7m/giphy.webp" alt="trophy" width="50" height="50"></h2>
    </div>
    <div class="col-md-6 text-right">
      <p>Total: <%= @achievements.count %> / 200</p>
      <p>Progress: <%= @achievements.count / 10.0 * 10 %>%</p>
    </div>
  </div>

  <% if @achievements.any? %>
    <div class="card-deck">
      <% @achievements.each do |achievement| %>
        <div class="card">
          <div class="card-body">
            <h3 class="card-title"><%= achievement.title.upcase %></h3>
            <p class="card-text"><%= achievement.description %>📜✔️</p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
