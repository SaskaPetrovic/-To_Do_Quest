<h2>Achievements</h2>
<!--Je n ai pas reussi-->
<div class="container">
  <h5 class="title-achievement">Total: <%= @achievements.count %> / 200</h5>
  <h5 class="title-achievement">Progress: <%= (@achievements.count / 10.0 * 10).to_i %>%</h5>

  <% if @achievements.any? %>
    <div class="tasks-list">
      <% @achievements.each do |achievement| %>
        <div class="task-item mb-2">
          <div class="p-1">
            <%= link_to achievement_path(achievement), class: 'text-decoration-none' do %>
              <div class="pixel-corners mb-1">
                <div class="p-3 colored">
                  <h3 class="mb-2 title-quest"><%= achievement.title.upcase %></h3>
                  <h4 class="mb-1 body-quest"><%= achievement.description %> 📜 ✔️</h4>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No achievements found.</p>
  <% end %>
</div>
