<h2>Achievements🏆</h2>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>My Trophies</h2>
    </div>
    <div class="col-md-6 text-right">
      <p>Total: <%= @achievements.count %> / 100</p>
      <p>Progress: <%= @achievements.count / 10.0 * 100 %>%</p>
    </div>
  </div>

  <% if @achievements.any? %>
    <ul class="list-group">
      <% @achievements.each do |achievement| %>
        <li class="list-group-item">
          <h4><%= achievement.title.upcase %></h4>
          <p><%= achievement.description %></p>
          <% if achievement.task.present? %>
            <p>Task: <%= achievement.task.title %></p>
          <% else %>
            <p>Task: Not assigned</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>You have not achieved anything yet.</p>
  <% end %>
</div>
