<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PROFILE</title>
</head>
<body>
    <div>
        <!-- -------------------------Email and Level ------------------------------>
        <div>
            <h2>Username: <%= @user.email %></h2>
            <h2>Level: <%= @user.level %></h2>
        </div>

        <!-- ----------------------Class and Stats------------------------------ -->
        <div>
            <h2>Class: </h2>
            <ul>
                <li><h5>INT:</h5> </li>
                <li><h5>MANA:</h5></li>
                <li><h5>DEX:</h5></li>
                <li><h5>STR:</h5></li>
                <li><h5>CHA:</h5></li>
            </ul>
        </div>

        <!------------------------- Experience Bar ----------------------------->
        <div>
            <h2>Experience Bar</h2> <!--J'AI MIT DU CSS FICTIF JUSTE POUR AFFICHER LA BARRE -->
            <div style="background-color: #eee; height: 20px; margin-top: 10px; border: 1px solid #ccc;">
                <div style="background-color: #4CAF50; height: 100%; width: <%= @user.experience_percentage %>%;"></div>
            </div>
            <h5><%= @user.experience %> To Next Lv.</h5>
        </div>

  <!-------------------------------------Tabs ---------------------------->
        <div>
            <button type="button" onclick="showTab('activity')">Activity</button>
            <button type="button" onclick="showTab('stats')">Stats</button>
        </div>

        <!------------------------- Tab Contents --------------------------->
        <div id="activity" class="tab-content">

            <div>
                <h3>Memo</h3>
                <p><%= @user.memo %></p>
            </div>
            <div>
                <h3>Status</h3>
                <p><%= @user.status %></p>
            </div>
        </div>

        <div id="stats" class="tab-content" style="display:none;">
            <h2>CHART</h2>
        </div>
    </div>
 <!-------------------------------JAVASCRIPT ONGLET----------------------->
    <script>
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(content => {
                content.style.display = 'none';
            });

            document.getElementById(tabId).style.display = 'block';
        }
        showTab('activity');
    </script>
</body>
</html>
